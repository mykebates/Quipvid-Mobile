<?xml version="1.0" encoding="UTF-8"?>

<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:controls="clr-namespace:QuipVid.Controls;assembly=QuipVid"
       xmlns:video="clr-namespace:QuipVid.Video;assembly=QuipVid"
       xmlns:views="clr-namespace:QuipVid.Views"
       Title="QuipVid"
       x:Class="QuipVid.AppShell">
    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="FlyoutItem" BasedOn="{StaticResource BaseStyle}" />
        </ResourceDictionary>
    </Shell.Resources>

    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent Style="{StaticResource DefaultShellStyle}">
                <views:HomePage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Detail">
        <Tab>
            <ShellContent Style="{StaticResource DefaultShellStyle}">
                <views:DetailPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Video">
        <Tab>
            <ShellContent Style="{StaticResource DefaultShellStyle}">
                <ContentPage>
                    <video:VideoPlayer Source="https://archive.org/download/BigBuckBunny_328/BigBuckBunny_512kb.mp4" ControlsEnabled="True"></video:VideoPlayer>
                </ContentPage>
            </ShellContent>
        </Tab>
    </FlyoutItem>
</Shell>
