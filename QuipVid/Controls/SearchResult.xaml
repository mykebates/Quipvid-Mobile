<?xml version="1.0" encoding="utf-8"?>

<DataTemplate xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="QuipVid.Controls.SearchResult">
    <StackLayout Orientation="Horizontal" Spacing="0">
        <StackLayout.Padding>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="iOS" Value="15,5,15,5" />
                <On Platform="Android" Value="15,15,15,15" />
            </OnPlatform>
        </StackLayout.Padding>

        <Image Source="https://via.placeholder.com/600x300"
               Aspect="AspectFill"
               VerticalOptions="Start"
               HeightRequest="38"
               WidthRequest="66" />

        <StackLayout Spacing="0" Padding="15,0,0,0">
            <Label Text="Toilet Sounds" FontAttributes="Bold" />
            <Label Text="King of the hill" />
        </StackLayout>
    </StackLayout>
</DataTemplate>
